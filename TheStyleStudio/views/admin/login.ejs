<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/login.css">
    <title>Admin Login</title>
</head>

<body>

    <div class="container" id="container">
        <!-- Login Form -->
        <div class="form-container sign-in">
            <form id="adminLogin" action="/admin/login" method="POST">
                <h1>Admin Login</h1>
                <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-github"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
                <span>or use your email password</span>
                <input name= "email" type="email" placeholder="Email" required>
                <input name ="password" type="password" placeholder="Password" required>
                <button type="submit">Sign In</button>
            </form>
        </div>

        <!-- Forgot Password Form -->
        <div class="form-container forgot-password">
            <form id="forgotPasswordForm">
                <h1>Forgot Password</h1>
                <p>Enter your registered email to reset your password.</p>
                <input type="email" id="email" placeholder="Email" required>
                <button type="btn submit">Reset Password</button>
            </form>
        </div>

        <!-- Toggle Slider -->
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Welcome Back!</h1>
                    <p>Enter your personal details to access your admin dashboard.</p>
                    <a class="btn button2" href="#" id="backToLogin">Back to Login</a>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Forgot Your Password?</h1>
                    <p>Enter your email to reset your password.</p>
                    <a class="btn button2" href="#" id="forgotPasswordLink">Forgot Your Password?</a>

                </div>
            </div>
        </div>
    </div>

    <script>
        const container = document.getElementById('container');
        const forgotPasswordLink = document.getElementById('forgotPasswordLink');
        const backToLogin = document.getElementById('backToLogin');

        // Toggle to forgot password form
        forgotPasswordLink.addEventListener('click', (e) => {
            e.preventDefault();
            container.classList.add("active");
        });

        // Toggle back to login form
        backToLogin.addEventListener('click', (e) => {
            e.preventDefault();
            container.classList.remove("active");
        });
    </script>
</body>

</html>

