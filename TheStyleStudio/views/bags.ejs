<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
    <link
      rel="stylesheet"  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" type="text/css" href="css/vendor.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="stylesheet" type="text/css" href="css/style.css">
  </head>
    <title>Bags</title>
</head>
<body>
    <!-- Bag Page Content -->
  <div class="container mt-5">
  <h2 class="mb-4">Bags</h2>
  <div class="row">
    <% products.forEach((product, index) => { %>
      <% if (index % 4 === 0 && index !== 0) { %> <!-- Add a new row after every 4 products -->
        </div>
        <div class="row">
      <% } %>

      <div class="col-6 col-md-3 mb-4">
        <div class="product-card">
          <img class="prod-img img-fluid" src="<%= product.image %>" alt="<%= product.name %>" />
          <p><%= product.name %></p>
          <p><strong>Rs.<%= product.price %></strong></p>
          <button class="btn btn-custom">ADD TO BAG</button>
        </div>
      </div>

    <% }); %>
  </div>
</div>

</body>
</html>