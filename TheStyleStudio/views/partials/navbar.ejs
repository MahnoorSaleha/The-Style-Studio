<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Improved Navbar</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg bg-light text-uppercase fs-6 p-3 border-bottom align-items-center sticky-top shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand text-white ms-5" href="/">
        <img src="../images/logo.png" alt="Logo" class="img-fluid" style="width: 200px;">
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
          <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body">
          <ul class="navbar-nav justify-content-center flex-grow-1 gap-4 pe-3">
            <!-- Clothes Dropdown -->
            <li class="nav-item dropdown me-3">
              <a class="nav-link dropdown-toggle" href="/clothes" id="dropdownClothes" data-bs-toggle="dropdown" aria-expanded="false">Clothes</a>
              <ul class="dropdown-menu" aria-labelledby="dropdownClothes">
                <li><a href="/clothes" class="dropdown-item">All</a></li>
                <li><a href="index.html" class="dropdown-item">Summers'24</a></li>
                <li><a href="index.html" class="dropdown-item">Winters'24</a></li>
                <li><a href="index.html" class="dropdown-item">Autumn'24</a></li>
                <li><a href="index.html" class="dropdown-item">Spring'24</a></li>
              </ul>
            </li>

            <!-- Jewellery Dropdown -->
            <li class="nav-item dropdown me-3">
              <a class="nav-link dropdown-toggle" href="/jewellery" id="dropdownJewellery" data-bs-toggle="dropdown" aria-expanded="false">Jewellery</a>
              <ul class="dropdown-menu" aria-labelledby="dropdownJewellery">
                <li><a href="/jewellery" class="dropdown-item">All</a></li>
                <li><a href="index.html" class="dropdown-item">Earrings</a></li>
                <li><a href="index.html" class="dropdown-item">Necklace</a></li>
                <li><a href="index.html" class="dropdown-item">Rings</a></li>
                <li><a href="index.html" class="dropdown-item">Bracelets</a></li>
                <li><a href="index.html" class="dropdown-item">Pendants</a></li>
                <li><a href="index.html" class="dropdown-item">Silver Range</a></li>
              </ul>
            </li>

            <!-- Bags Dropdown -->
            <li class="nav-item dropdown me-3">
              <a class="nav-link dropdown-toggle" href="/bags" id="dropdownBags" data-bs-toggle="dropdown" aria-expanded="false">Bags</a>
              <ul class="dropdown-menu" aria-labelledby="dropdownBags">
                <li><a href="/bags" class="dropdown-item">All</a></li>
                <li><a href="index.html" class="dropdown-item">Shoulder Bags</a></li>
                <li><a href="index.html" class="dropdown-item">Handbags</a></li>
                <li><a href="index.html" class="dropdown-item">School Bags</a></li>
                <li><a href="index.html" class="dropdown-item">Wallets</a></li>
              </ul>
            </li>

            <!-- Toys Dropdown -->
            <li class="nav-item dropdown me-3">
              <a class="nav-link dropdown-toggle" href="/toys" id="dropdownToys" data-bs-toggle="dropdown" aria-expanded="false">Toys</a>
              <ul class="dropdown-menu" aria-labelledby="dropdownToys">
                <li><a href="/toys" class="dropdown-item">All</a></li>
                <li><a href="index.html" class="dropdown-item">Stuffed Toys</a></li>
                <li><a href="index.html" class="dropdown-item">Cars</a></li>
                <li><a href="index.html" class="dropdown-item">Dolls</a></li>
              </ul>
            </li>

            <!-- Accessories Dropdown -->
            <li class="nav-item dropdown me-3">
              <a class="nav-link dropdown-toggle" href="/accessories" id="dropdownAccessories" data-bs-toggle="dropdown" aria-expanded="false">Accessories</a>
              <ul class="dropdown-menu" aria-labelledby="dropdownAccessories">
                <li><a href="/accessories" class="dropdown-item">All</a></li>
                <li><a href="index.html" class="dropdown-item">Hair</a></li>
                <li><a href="index.html" class="dropdown-item">Glasses</a></li>
                <li><a href="index.html" class="dropdown-item">Keychains</a></li>
                <li><a href="index.html" class="dropdown-item">Headphones</a></li>
                <li><a href="index.html" class="dropdown-item">Phone Cases</a></li>
              </ul>
            </li>

            <!-- Admin Panel -->
            <li class="nav-item me-3">
              <a class="nav-link" href="/admin/login">Admin Panel</a>
            </li>

            <!-- Search Bar -->
            <li class="nav-item me-3">
              <form class="d-flex" action="/search" method="get">
                <input class="form-control me-2" type="search" name="search" placeholder="Search..." aria-label="Search">
              </form>
            </li>

            <!-- User Icon -->
            <li class="nav-item position-relative me-3">
              <a href="/login" class="nav-link text-dark">
                <i class="fas fa-user fa-lg" style="cursor: pointer;" id="userIcon"></i>
              </a>
            </li>

            <!-- Cart Icon -->
            <li class="nav-item position-relative">
              <a href="/cart" class="nav-link text-dark">
                <i class="fa-solid fa-cart-shopping fa-lg"></i>
                <% if (cartCount > 0) { %>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                  <%= cartCount %>
                </span>
                <% } %>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
